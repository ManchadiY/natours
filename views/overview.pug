extends base

block content 

    main.main 
        .card-container 
            each tour in tours 
                .card 
                    .card__header 
                        .card__picture 
                            .card__picture-overlay &nbsp 
                            img.card__picture-img(src=`img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                        h3.heading-teritary 
                            span= tour.name 
                    .card__details 
                        h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-days Tour` 
                        p.card__text= tour.summary 
                        .card__data 
                            svg.card__icon 
                                use(xlink:href="img/icons.svg#icon-map-pin")
                            span= tour.startLocation.description
                        .card__data 
                            svg.card__icon 
                                use(xlink:href="img/icons.svg#icon-calender")
                            span= tour.startDates[0].toLocaleString('en-us',{month:'long', year:'numeric'})
                        .card__data 
                            svg.card__icon 
                                use(xlink:href="img/icons.svg#icon-flag")
                            span= `${tour.locations.length} stops`
                        .card__data 
                            svg.card__icon 
                                use(xlink:href="img/icons.svg#icon-usar")
                            span= `${tour.maxGroupSize} people`

                    .card__footer 
                        p 
                            span.card__footer-value= `$${tour.price}`
                            | 
                            span.card__footer-text  per person 
                        p.card__ratings 
                            span.card__footer-value= `${tour.ratingAverage}`
                            | 
                            span.card__footer-text= `rating ${tour.ratingQuantity}` 
                        - const x = tour._id  
                        a.btn.btn--green.btn--small(href=`/tour/${x}`) Details  











